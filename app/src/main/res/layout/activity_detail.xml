<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="repoDetail"
            type="com.sun.mvvmsample.data.model.GithubRepo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screen.detail.DetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/imageRepoDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{repoDetail.fullName}" />

        <ImageView
            android:id="@+id/imageRepoDetail"
            imageUrl="@{repoDetail.avatarUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@null"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintWidth_percent="0.5" />

        <Button
            android:id="@+id/buttonStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/text_star"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/buttonFolk"
            app:layout_constraintEnd_toStartOf="@id/textStarCount"
            app:layout_constraintStart_toEndOf="@id/imageRepoDetail"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <TextView
            android:id="@+id/textStarCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@{Integer.toString(repoDetail.starCount)}"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBaseline_toBaselineOf="@id/buttonStar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonStar"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <Button
            android:id="@+id/buttonFolk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/text_folk"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@id/textFolkCount"
            app:layout_constraintStart_toEndOf="@id/imageRepoDetail"
            app:layout_constraintTop_toBottomOf="@id/buttonStar" />

        <TextView
            android:id="@+id/textFolkCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@{Integer.toString(repoDetail.folkCount)}"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBaseline_toBaselineOf="@id/buttonFolk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonFolk"
            app:layout_constraintTop_toBottomOf="@id/textStarCount" />

        <TextView
            android:id="@+id/repoUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:autoLink="web"
            android:gravity="center"
            android:text="@{repoDetail.url}"
            android:textSize="@dimen/sp_18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageRepoDetail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
